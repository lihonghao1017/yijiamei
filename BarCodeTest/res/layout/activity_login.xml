<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_background"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/login_sl_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" >

            <ImageView
                android:id="@+id/login_iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="100dip"
                android:src="@drawable/logo" />

            <RelativeLayout
                android:id="@+id/userNameLayout"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_below="@id/login_iv_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="50dip"
                android:background="@drawable/login_input_head" >

                <EditText
                    android:id="@+id/username"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@android:color/transparent"
                    android:hint="输入账号"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pwsLayout"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_below="@id/userNameLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/login_input_head" >

                <EditText
                    android:id="@+id/pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@android:color/transparent"
                    android:hint="输入账号"
                    android:lines="1"
                    android:singleLine="true"
                    android:textSize="16sp" />
            </RelativeLayout>
            <Button
                android:id="@+id/commit"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_below="@id/pwsLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/login_submit_bt_selector"
                android:text="登陆"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>